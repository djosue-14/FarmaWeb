<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>

    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize/css/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/materialize/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet"/>
</head>
<body>
    <nav class="blue" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="@Url.Action("Index", "Home")" class="brand-logo white-text"><i class="fa fa-heartbeat" aria-hidden="true"></i></a>
            <ul class="right hide-on-med-and-down">
                <li><a href="@Url.Action("Index", "Home")" class="white-text">Inicio</a></li>
                <li><a href="@Url.Action("Products", "Home")" class="white-text">Productos</a></li>
            </ul>

            <ul id="nav-mobile" class="side-nav">
                <li><a href="@Url.Action("Index", "Home")" class="blue-text">Inicio</a></li>
                <li><a href="@Url.Action("Products", "Home")" class="blue-text">Productos</a></li>
            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse white-text">
                <i class="fa fa-navicon" aria-hidden="true"></i>
            </a>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>


    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/materialize/js/materialize.min.js"></script>
    <script src="~/Scripts/materialize/js/init.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>